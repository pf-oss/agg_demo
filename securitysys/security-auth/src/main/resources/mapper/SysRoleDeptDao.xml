<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.security.auth.dao.SysRoleDeptDao">

    <resultMap type="com.security.auth.model.domain.SysRoleDept" id="SysRoleDeptMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleDeptMap">
        select
          role_id, dept_id
        from security-auth.sys_role_dept
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleDeptMap">
        select
          role_id, dept_id
        from security-auth.sys_role_dept
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleDeptMap">
        select
          role_id, dept_id
        from security-auth.sys_role_dept
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="deptId != null">
                and dept_id = #{deptId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into security-auth.sys_role_dept()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update security-auth.sys_role_dept
        <set>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from security-auth.sys_role_dept where role_id = #{roleId}
    </delete>

</mapper>